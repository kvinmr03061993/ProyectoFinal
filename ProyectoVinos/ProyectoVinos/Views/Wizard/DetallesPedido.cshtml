@{
}

<br /><br /><br />

<form asp-action="DetallesPedido">

    <div class="my-3 row">
        <fieldset disabled class="col-6">


            @Html.HiddenFor(m => m.IdVino)
            @Html.HiddenFor(m => m.IdDiseño)
            @Html.HiddenFor(m => m.PrecioTotal)

            <div class="form-group row">
                <label for="colFormLabel" class="col-sm-4 col-form-label">Vino</label>
                <div class="col-sm-8">
                    @Html.EditorFor(m => m.Vino.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group row">
                <label for="colFormLabel" class="col-sm-4 col-form-label">Diseño</label>
                <div class="col-sm-8">
                    @Html.EditorFor(m => m.Diseño.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group row">
                <label for="colFormLabel" class="col-sm-4 col-form-label">Cantidad</label>
                <div class="col-sm-4">

                    @Html.EditorFor(m => m.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">
                <label for="colFormLabel" class="col-sm-4 col-form-label">Precio</label>
                <div class="col-sm-4">

                    <div class="my-3 row justify-content-md-center">
                        <h1 class="display-5 text-center">₡ @Html.DisplayFor(m => m.PrecioTotal)</h1>
                    </div>
                </div>
            </div>


        </fieldset>

        <fieldset class="col-6">
            <div class="form-group row">
                <label for="colFormLabel" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-4">

                    <div class="mt-3 row justify-content-md-center">
                        <br />
                        <button class="w-100 btn btn-lg btn-primary" type="submit" value="Create" style="background-color: #195da3; border: #195da3;">Crear</button>
                    </div>

                </div>
            </div>
          <fieldset>

    </div>

</form>

